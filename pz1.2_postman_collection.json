						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Should fail\",\n  \"description\": \"no token\"\n}"
						},
						"url": {
							"raw": "http://{{TASKS_HOST}}/v1/tasks",
							"protocol": "http",
							"host": ["{{TASKS_HOST}}"],
							"path": ["v1", "tasks"]
						}
					}
				}
			]
		}
	]
